<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="200dp"
        android:id="@+id/laya"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/as"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            />
        <Button
            android:layout_width="150dp"
            android:text="+3"
            android:onClick="ap3"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="150dp"
            android:onClick="ap2"
            android:text="+2"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="150dp"
            android:text="Free Throw"
            android:onClick="ap1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/laya"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/bs"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            />
        <Button
            android:layout_width="150dp"
            android:text="+3"
            android:layout_gravity="center"
            android:onClick="bp3"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="150dp"
            android:text="+2"
            android:onClick="bp2"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="150dp"
            android:text="Free Throw"
            android:onClick="bp1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />




    </LinearLayout>

</RelativeLayout>